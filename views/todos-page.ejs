<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Daftar Tugas Saya</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1>Daftar Tugas Saya</h1>
      <p>Ini adalah halaman daftar tugas saya.</p>

      <!-- Form tambah todo -->
      <form id="addTodoForm" class="mb-4">
        <div class="form-group">
          <input type="text" id="taskInput" class="form-control" placeholder="Tugas baru..." required />
        </div>
        <button type="submit" class="btn btn-success">Tambah Tugas</button>
      </form>

      <% if (todos && todos.length > 0) { %>
      <ul class="list-group" id="todosList">
        <% todos.forEach(function(todo) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>ID: <%= todo.id %> Tugas: <span id="task-<%= todo.id %>"><%= todo.task %></span></span>
          <div>
            <button class="btn btn-warning btn-sm mr-2" onclick="editTodo(<%= todo.id %>)">Edit</button>
            <button class="btn btn-danger btn-sm" onclick="deleteTodo(<%= todo.id %>)">Delete</button>
          </div>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p>Tidak ada tugas yang tersedia.</p>
      <% } %>

      <a href="/" class="btn btn-primary mt-3">Go to Home</a>
    </div>

    <script>
      // POST
      document.getElementById('addTodoForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const task = document.getElementById('taskInput').value;
        const res = await fetch('/todos', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ task })
        });
        if (res.ok) location.reload();
      });

      // PUT
      async function editTodo(id) {
        const newTask = prompt('Edit tugas:');
        if (newTask) {
          const res = await fetch('/todos/' + id, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ task: newTask })
          });
          if (res.ok) location.reload();
        }
      }

      // DELETE
      async function deleteTodo(id) {
        if (confirm('Yakin hapus tugas ini?')) {
          const res = await fetch('/todos/' + id, { method: 'DELETE' });
          if (res.ok) location.reload();
        }
      }
    </script>
  </body>
</html>